{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "build",
    "public",
    "lib"
  ]
}
